{
    "compilerOptions": {
      "baseUrl": ".",
      "inlineSourceMap": true,
      "inlineSources": true,
      "module": "ESNext",
      "target": "ES2020",
      "allowJs": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "isolatedModules": true,
      "strictNullChecks": true,
      "resolveJsonModule": true,
      "jsx": "preserve",
      "incremental": true,
      "lib": ["DOM", "ES5", "ES6", "ES7"],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noEmit": true,
      "verbatimModuleSyntax": true,
      "paths": {
        "$lib/*": ["./src/lib/*"],
        "$features/*": ["./src/features/*"],
        "$stores/*": ["./src/stores/*"],
        "$/*": ["./src/*"],
        "$components/*": ["./src/components/*"],
        "$utils/*": ["./src/utils/*"],
        "$styles/*": ["./src/styles/*"],
        "$config/*": ["./src/config/*"],
        "$public/*": ["./public/*"]
      },
      "types": [
        "obsidian-typings"
      ]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.svelte",
      "types/**/*.d.ts",
      "src/svelte-shims.d.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
